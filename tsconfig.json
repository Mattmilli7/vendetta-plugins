{
    "include": ["**/*", "node_modules/vendetta-types/*.d.ts"],
    "exclude": ["dist"],

    "compilerOptions": {
        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,
        "strict": true,

        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,

        "importHelpers": true,
        "noEmit": true,

        "allowJs": true,
        "checkJs": true,

        "jsx": "react",
        "target": "esnext"
    }
}
